<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/backinviewsubtask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:layout_margin="3dp"/>

    <Button
        android:id="@+id/editinviewsubtask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/subtasknamedisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SubTask Name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/subtaskdescriptiondisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SubTask Description"
        android:textStyle="bold"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/subtaskdatedisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SubTask Date"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="5dp"/>
</LinearLayout>