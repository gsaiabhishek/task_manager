        android:id="@+id/newsubtaskdateid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        />

    <EditText
        android:id="@+id/newsubtasknameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Task Name" />

    <EditText
        android:id="@+id/newsubtaskdescriptionid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:hint="Task Description" />



    <Button
        android:id="@+id/newsubtasksaveid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE" />

